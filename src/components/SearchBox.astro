---
import searchScript from '../scripts/search.js?url';
---

<div class="search-container">
  <div class="search-box industrial-border">
    <input 
      type="text" 
      id="search-input" 
      placeholder="搜索文章..." 
      autocomplete="off"
    />
    <button id="search-button" class="search-btn" aria-label="搜索">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
    </button>
  </div>
  <div id="search-results" class="search-results industrial-border hidden"></div>
</div>

<style>
  .search-container {
    position: relative;
    margin-bottom: 2rem;
  }

  .search-box {
    position: relative;
    display: flex;
    align-items: center;
    background-color: var(--color-card);
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .search-box:focus-within {
    box-shadow: var(--shadow-md);
  }

  #search-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: none;
    background: none;
    color: var(--color-text);
    font-size: 1rem;
    outline: none;
    font-family: var(--font-sans);
  }

  #search-input::placeholder {
    color: var(--color-secondary);
  }

  .search-btn {
    padding: 0.75rem;
    border: none;
    background: var(--color-code-bg);
    color: var(--color-secondary);
    cursor: pointer;
    transition: all 0.2s ease;
    border-left: var(--border-width) var(--border-style) var(--color-border);
  }

  .search-btn:hover {
    color: var(--color-accent);
    background-color: var(--color-hover);
  }

  .search-results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: var(--color-card);
    max-height: 400px;
    overflow-y: auto;
    z-index: 10;
    margin-top: -1px;
  }

  .search-results.hidden {
    display: none;
  }

  .search-result {
    padding: 1rem;
    border-bottom: var(--border-width) var(--border-style) var(--color-border);
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .search-result:hover {
    background-color: var(--color-hover);
  }

  .search-result:last-child {
    border-bottom: none;
  }

  .search-result-title {
    font-weight: 700;
    margin-bottom: 0.25rem;
    color: var(--color-text);
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .search-result-excerpt {
    font-size: 0.875rem;
    color: var(--color-secondary);
    line-height: 1.4;
    font-family: var(--font-sans);
  }

  .search-highlight {
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 0.125rem 0.25rem;
    font-weight: bold;
  }
</style>

<script type="module" src={searchScript}></script>