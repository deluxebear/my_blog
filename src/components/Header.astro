---
import logo from "../assets/logo.png";
---

<header class="header industrial-border">
  <div class="container">
    <div class="header-content">
      <div class="logo-section">
        <div class="logo">
          <img src={logo.src} alt="数得其道 Logo" width="60" height="60" />
        </div>
        <div class="site-info">
          <h1 class="site-title">
            <a href="/">数得其道</a>
          </h1>
          <p class="site-subtitle">道 · 法 · 术 · 器</p>
        </div>
      </div>

      <nav class="nav">
        <ul class="nav-list">
          <li><a href="/" class="nav-link" data-page="home">首页</a></li>
          <li><a href="/posts" class="nav-link" data-page="posts">文章</a></li>
          <li><a href="/tools" class="nav-link" data-page="tools">工具</a></li>
          <li><a href="/projects" class="nav-link" data-page="projects">项目</a></li>
          <li><a href="/about" class="nav-link" data-page="about">关于</a></li>
          <li>
            <a href="/rss.xml" class="nav-link rss-link" data-page="rss">RSS</a>
          </li>
        </ul>
        <button
          id="theme-toggle"
          class="theme-toggle industrial-border"
          aria-label="切换主题"
        >
          <span class="theme-icon">◐</span>
        </button>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: var(--color-card);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    width: 100%;
    overflow: hidden; /* 恢复为 hidden */
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    gap: 2rem;
    width: 100%;
    min-height: 80px;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .logo {
    color: var(--color-accent);
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .logo:hover {
    transform: rotate(45deg);
  }

  .logo svg {
    display: block;
  }

  .site-info {
    flex-shrink: 1;
    min-width: 0;
  }

  .site-title {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 2px;
    line-height: 1.2;
  }

  .site-title a {
    color: var(--color-text);
  }

  .site-subtitle {
    font-size: 0.75rem;
    color: var(--color-secondary);
    margin: 0;
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.2;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-shrink: 0;
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-link {
    font-family: var(--font-mono);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 0.75rem 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.875rem;
    white-space: nowrap;
    position: relative;
    color: var(--color-secondary);
    border: 2px solid transparent;
    background-color: transparent;
  }

  /* 默认悬停效果 */
  .nav-link:hover {
    color: var(--color-accent);
    background-color: var(--color-hover);
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  /* 当前页面激活状态 - 主要样式 */
  .nav-link.active {
    color: var(--color-bg) !important;
    background-color: var(--color-accent) !important;
    border-color: var(--color-accent) !important;
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
  }

  /* 当前页面激活状态的悬停效果 */
  .nav-link.active:hover {
    background-color: var(--color-text) !important;
    border-color: var(--color-text) !important;
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  /* 当前页面指示器 - 底部边框 */
  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 3px;
    background-color: var(--color-bg);
    border-radius: 2px;
  }

  /* 当前页面指示器 - 顶部标记 */
  .nav-link.active::before {
    content: "●";
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    color: var(--color-bg);
    font-size: 0.75rem;
    font-weight: bold;
  }

  /* RSS 链接特殊样式 */
  .rss-link {
    color: var(--color-accent) !important;
    border-color: var(--color-accent);
  }

  .rss-link:hover {
    background-color: var(--color-accent);
    color: var(--color-bg) !important;
  }

  .rss-link.active {
    background-color: var(--color-accent) !important;
    color: var(--color-bg) !important;
  }

  .theme-toggle {
    background: var(--color-card);
    border-radius: 0;
    width: 40px;
    height: 40px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    font-family: var(--font-mono);
    flex-shrink: 0;
  }

  .theme-toggle:hover {
    background-color: var(--color-accent);
    color: var(--color-bg);
    transform: translateY(-1px);
  }

  .theme-icon {
    font-size: 1.2rem;
    font-weight: bold;
  }

  /* 移动端优化 */
  @media (max-width: 768px) {
    .header {
      position: sticky;
      top: 0;
    }

    .container {
      padding: 0 0.75rem;
    }

    .header-content {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem 0;
      min-height: auto;
    }

    .logo-section {
      justify-content: center;
      width: 100%;
      gap: 0.75rem;
    }

    .logo svg {
      width: 50px;
      height: 50px;
    }

    .site-title {
      font-size: 1.25rem;
      letter-spacing: 1px;
    }

    .site-subtitle {
      font-size: 0.7rem;
    }

    .nav {
      width: 100%;
      justify-content: space-between;
      gap: 1rem;
    }

    .nav-list {
      gap: 0.5rem;
      flex-wrap: wrap;
      justify-content: center;
      flex: 1;
    }

    .nav-link {
      font-size: 0.75rem;
      padding: 0.5rem 0.75rem;
    }

    /* 移动端当前页面指示器调整 */
    .nav-link.active::before {
      top: -6px;
      font-size: 0.6rem;
    }

    .nav-link.active::after {
      bottom: -1px;
      height: 2px;
    }

    .theme-toggle {
      width: 36px;
      height: 36px;
    }

    .theme-icon {
      font-size: 1rem;
    }
  }

  /* 超小屏幕优化 */
  @media (max-width: 480px) {
    .container {
      padding: 0 0.5rem;
    }

    .header-content {
      gap: 0.75rem;
      padding: 0.75rem 0;
    }

    .logo-section {
      gap: 0.5rem;
    }

    .logo img {
      width: 45px;
      height: 45px;
    }

    .site-title {
      font-size: 1.125rem;
    }

    .site-subtitle {
      font-size: 0.65rem;
    }

    .nav-list {
      gap: 0.25rem;
    }

    .nav-link {
      font-size: 0.7rem;
      padding: 0.375rem 0.5rem;
    }

    .theme-toggle {
      width: 32px;
      height: 32px;
    }
  }
</style>

<script>
  const themeToggle = document.getElementById("theme-toggle");
  const themeIcon = themeToggle?.querySelector(".theme-icon");

  function updateThemeIcon() {
    if (themeIcon) {
      themeIcon.textContent = document.documentElement.classList.contains(
        "dark"
      )
        ? "◑"
        : "◐";
    }
  }

  themeToggle?.addEventListener("click", () => {
    const isDark = document.documentElement.classList.contains("dark");

    if (isDark) {
      document.documentElement.classList.remove("dark");
      localStorage.setItem("theme", "light");
    } else {
      document.documentElement.classList.add("dark");
      localStorage.setItem("theme", "dark");
    }

    updateThemeIcon();
  });

  // Initialize theme icon
  updateThemeIcon();

  // 当前页面高亮功能
  function setActiveNavLink() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll(".nav-link");

    // 移除所有激活状态
    navLinks.forEach((link) => link.classList.remove("active"));

    // 根据当前路径设置激活状态
    navLinks.forEach((link) => {
      const href = link.getAttribute("href");
      const page = link.getAttribute("data-page");

      // 精确匹配首页
      if (currentPath === "/" && href === "/") {
        link.classList.add("active");
      }
      // 匹配文章页面（包括文章列表和具体文章）
      else if (currentPath.startsWith('/posts') && page === 'posts') {
        link.classList.add('active');
      }
      // 匹配工具页面
      else if (currentPath.startsWith('/tools') && page === 'tools') {
        link.classList.add('active');
      }
      // 匹配项目页面
      else if (currentPath.startsWith("/projects") && page === "projects") {
        link.classList.add("active");
      }
      // 匹配关于页面
      else if (currentPath.startsWith("/about") && page === "about") {
        link.classList.add("active");
      }
      // RSS 链接不需要激活状态，因为它是外部链接
    });
  }

  // 页面加载时设置激活状态
  document.addEventListener("DOMContentLoaded", setActiveNavLink);

  // 监听路由变化（适用于 SPA 应用）
  window.addEventListener("popstate", setActiveNavLink);
</script>
