        // æ£€æŸ¥æ˜¯å¦æ˜¯å®Œæ•´çš„URL
        new URL(string);
        return true;
      } catch (_) {
        // æ£€æŸ¥æ˜¯å¦æ˜¯ç›¸å¯¹URLæˆ–æŸ¥è¯¢å­—ç¬¦ä¸²
        if (string.startsWith('/') || string.startsWith('?') || string.startsWith('#')) {
          return true;
        }
        // æ£€æŸ¥æ˜¯å¦åŒ…å«URLçš„åŸºæœ¬ç‰¹å¾
        if (string.includes('://') || string.includes('www.') || /\.[a-z]{2,}/.test(string)) {
          return true;
        }
        return false;
      }
    }
  }

