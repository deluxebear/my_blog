    // è§£æIPIP.netçš„æ–‡æœ¬å“åº”
    parseIPIPNetText(textContent) {
      try {
        // è§£ææ ¼å¼ï¼šå½“å‰ IPï¼š14.153.129.147  æ¥è‡ªäºï¼šä¸­å›½ å¹¿ä¸œ æ·±åœ³  ç”µä¿¡
        const ipMatch = textContent.match(/å½“å‰\s*IP[ï¼š:]\s*(\d+\.\d+\.\d+\.\d+)/);
        const ip = ipMatch ? ipMatch[1] : '';
        
        const locationMatch = textContent.match(/æ¥è‡ªäº[ï¼š:]\s*([^\n\r]+)/);
        let location = '';
        let isp = '';
        
        if (locationMatch) {
          const locationText = locationMatch[1].trim();
          // åˆ†ç¦»åœ°ç†ä½ç½®å’ŒISPä¿¡æ¯
          const parts = locationText.split(/\s+/);
          if (parts.length > 0) {
            // æœ€åä¸€ä¸ªé€šå¸¸æ˜¯ISP
            isp = parts[parts.length - 1];
            // å…¶ä½™çš„æ˜¯åœ°ç†ä½ç½®
            location = parts.slice(0, -1).join(' ');
          }
        }
        
        return {
          ip: ip,
          location: location,
          isp: isp
        };
        
      } catch (error) {
        console.error('è§£æIPIP.netæ–‡æœ¬å¤±è´¥:', error);
        throw new Error('æ–‡æœ¬è§£æå¤±è´¥');
      }
    }

    // è§£æIP138çš„HTMLå“åº”
    parseIP138HTML(htmlText) {
      try {
        const parser = new DOMParser();
        const doc = parser.parseFromString(htmlText, 'text/html');
        
        const title = doc.querySelector('title')?.textContent || '';
        const ipMatch = title.match(/æ‚¨çš„IPåœ°å€æ˜¯ï¼š(\d+\.\d+\.\d+\.\d+)/);
        const ip = ipMatch ? ipMatch[1] : '';
        
        const viewDiv = doc.querySelector('.view');
        let location = '';
        
        if (viewDiv) {
          const spans = viewDiv.querySelectorAll('span');
          for (let span of spans) {
            const text = span.textContent || '';
            if (text.includes('æ¥è‡ªï¼š')) {
              location = text.replace('æ¥è‡ªï¼š', '').trim();
              break;
            }
          }
        }
        
        if (!location) {
          const bodyText = doc.body.textContent || '';
          const locationMatch = bodyText.match(/æ¥è‡ªï¼š([^<\n]+)/);
          if (locationMatch) {
            location = locationMatch[1].trim();
          }
        }
        
        return {
          ip: ip,
          location: location
        };
        
      } catch (error) {
        console.error('è§£æIP138 HTMLå¤±è´¥:', error);
        throw new Error('HTMLè§£æå¤±è´¥');
      }
    }

    async fetchWithTimeout(url, timeout) {
      const controller = new AbortController();
      const timeoutId = setTimeout(() => controller.abort(), timeout);
      
      try {
        const response = await fetch(url, {
          signal: controller.signal,
          mode: 'cors',
          headers: {
            'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36'
          }
        });
        clearTimeout(timeoutId);
        return response;
      } catch (error) {
        clearTimeout(timeoutId);
        if (error.name === 'AbortError') {
          throw new Error('è¯·æ±‚è¶…æ—¶');
        }
        throw error;
      }
    }

    standardizeData(apiId, rawData) {
      const standardized = {
