      const getConsensusValue = (field) => {
        const values = successfulResults.map(r => r.data[field]).filter(v => v && v !== 'æœªçŸ¥');
        if (values.length === 0) return 'æœªçŸ¥';
        
        // è®¡ç®—æ¯ä¸ªå€¼çš„å‡ºç°æ¬¡æ•°
