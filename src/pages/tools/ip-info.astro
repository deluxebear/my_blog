    isValidIP(ip) {
      // ç®€å•çš„IPæ ¼å¼éªŒè¯
      const ipv4Regex = /^(\d{1,3}\.){3}\d{1,3}$/;
      const ipv6Regex = /^([0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}$/;
      
      if (ipv4Regex.test(ip)) {
        const parts = ip.split('.');
        return parts.every(part => parseInt(part) >= 0 && parseInt(part) <= 255);
      }
      
      return ipv6Regex.test(ip);
    }
  }

