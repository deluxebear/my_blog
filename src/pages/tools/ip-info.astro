        let data;
        if (api.type === 'html') {
          const htmlText = await response.text();
          data = this.parseIP138HTML(htmlText);
        } else if (api.type === 'text') {
          const textContent = await response.text();
          data = this.parseIPIPNetText(textContent);
        } else {
          data = await response.json();
