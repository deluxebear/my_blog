    async queryAPI(api) {
      const startTime = Date.now();
      
      try {
        const response = await this.fetchWithTimeout(api.url, api.timeout);
        const endTime = Date.now();
        const responseTime = endTime - startTime;
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}`);
