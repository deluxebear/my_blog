        this.updateApiCard(apiId, 'success', responseTime, standardizedData);
        
      } catch (error) {
        console.error(`API ${apiId} æŸ¥è¯¢å¤±è´¥:`, error);
        
        this.results[apiId] = {
          success: false,
          error: error.message,
          responseTime: Date.now() - startTime,
          timestamp: new Date().toISOString()
